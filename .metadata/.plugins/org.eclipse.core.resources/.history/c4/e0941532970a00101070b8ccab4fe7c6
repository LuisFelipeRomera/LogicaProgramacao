//Calculate the mean of three grades

package aula03;

import java.util.Scanner;

public class MediaNotas {
	public static void main(String[] args) {
		
		//Variable declaration
		double grade1 = 0;
		double grade2 = 0;
		double grade3 = 0;
		double mean = 0;
		//Scanner declaration "Ctrl + Shift + O"
		Scanner reader = new Scanner(System.in);
		
		//Data input
		System.out.print("Input grade 1: ");
		grade1 = reader.nextDouble();
		
		System.out.print("Input grade 2: ");
		grade2 = reader.nextDouble();
		
		System.out.print("Input grade 3: ");
		grade3 = reader.nextDouble();
		
		//Close scanner
		
		reader.close();
		
		//Data processing
		
		mean = (grade1 + grade2 + grade3) / 3;
		
		//Data output
		
		System.out.print("The mean is: " + mean);
		
	}

}
